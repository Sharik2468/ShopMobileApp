<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="800"
             x:Class="InternetShopMobileApp.Views.BasketContentView">
	<DockPanel Background="AliceBlue">

		<StackPanel Orientation="Horizontal"
					Spacing="8"
					Margin="16"
					DockPanel.Dock="Top">
			<TextBlock Text="Корзина"
					   FontSize="20"/>
			<TextBlock Text="15 товаров"
					   Foreground="Gray"
					   FontSize="14"
					   Margin="0,5,0,0"/>
		</StackPanel>

		<Border CornerRadius="12"
				Background="White"
				DockPanel.Dock="Top"
				Margin="16">
			<StackPanel>
				<Grid Margin="0,0,0,24">
					
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					
					<Image Margin="12" Grid.Row="0"/>
					<TextBlock Margin="12" FontSize="20" 
							   Text="aaa" Grid.Row="0" 
							   Grid.Column="1" Grid.ColumnSpan="2"/>
					<Image Grid.Row="0" VerticalAlignment="Top"
						   Grid.Column="2" HorizontalAlignment="Right"
						   Source="/Resources/DeleteOutlined.png"
						   Width="30" Height="30"
						   Margin="12"/>

					<Slider Grid.Column="0" Grid.Row="1"
							Margin="12" Maximum="20"
							Minimum="0"/>

					<Border Margin="10" Height="42" 
							CornerRadius="12" Grid.Column="1" 
							Background="#CFF1FF" Grid.Row="1">
						<TextBlock Foreground="Black" FontSize="12" Text="aaa" VerticalAlignment="Center" HorizontalAlignment="Center"/>
					</Border>

					<Border Margin="10" Height="42" 
							CornerRadius="12" Grid.Column="2" 
							Background="#80D9FC" Grid.Row="1">
						<Button Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
							<TextBlock Foreground="Black" FontSize="12" Text="Купить" VerticalAlignment="Center" HorizontalAlignment="Center"/>
						</Button>
					</Border>
				</Grid>
			</StackPanel>
		</Border>

		<StackPanel>
			<Border CornerRadius="12"
			Background="White"
			DockPanel.Dock="Top"
			Margin="16">
				<StackPanel>
					<Image Margin="80,18,80,20" />
					<TextBlock Margin="16,0,16,24" FontSize="20" Text="aaa"/>
					<Grid Margin="0,0,0,24">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<Border Margin="10" Height="42" CornerRadius="12" Grid.Column="0" Background="#CFF1FF">
							<TextBlock Foreground="Black" FontSize="12" Text="aaa" VerticalAlignment="Center" HorizontalAlignment="Center"/>
						</Border>

						<Border Margin="10" Height="42" CornerRadius="12" Grid.Column="1" Background="#CFF1FF" >
							<TextBlock Foreground="Black" FontSize="12" Text="aaa" VerticalAlignment="Center" HorizontalAlignment="Center"/>
						</Border>

						<Border Margin="10" Height="42" CornerRadius="12" Grid.Column="2" Background="#80D9FC" >
							<Button Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
								<TextBlock Foreground="Black" FontSize="12" Text="Купить" VerticalAlignment="Center" HorizontalAlignment="Center"/>
							</Button>
						</Border>
					</Grid>
				</StackPanel>
			</Border>
		</StackPanel>

	</DockPanel>
</UserControl>
